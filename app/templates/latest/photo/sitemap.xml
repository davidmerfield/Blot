<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"> 
  <url>
    <loc>{{blogURL}}</loc> 
  </url>
  <url>
    <loc>{{blogURL}}/archives/</loc> 
  </url>
  {{#menu}}
  {{#isPage}}
  <url>
    <loc>{{blogURL}}{{url}}/</loc>
  </url>
  {{/isPage}}
  {{/menu}}    
  {{#allEntries}}  
  <url>
    <loc>{{blogURL}}{{url}}/</loc> 
    <lastmod>{{#formatUpdated}}YYYY-MM-DD{{/formatUpdated}}</lastmod>  </url>
  {{/allEntries}}  
</urlset>