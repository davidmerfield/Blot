{
  "name": "Blog",
  "locals": {
    "page_size": 6,
    "text_color": "#232323",
    "background_color": "#FFFFFF",
    "accent_color": "#0078D9",
    "hide_dates": false,
    "date_display": "MMMM D, Y",
    "syntax_highlighter": {
      "id": "stackoverflow-light"
    },
    "body_font": {
      "font_size": 18
    },
    "coding_font": {
      "font_size": 16
    },
    "navigation_font": {
      "font_size": 14
    },
    
    "index_layout": "post_in_full",
    "index_layout_options": [
      "titles",
      "title_and_summary",
      "post_in_full"
    ],
    "navigation_alignment": "justified",
    "navigation_alignment_options": [
      "justified",
      "left",
      "right",
      "center"
    ],
    "navigation_position": "top",
    "navigation_position_options": [
      "top",
      "bottom"
    ]
  },
  "isPublic": true,
  "views": {
    "archives.html": {
      "url": "/archives",
      "partials": {
        "title": "Archives - {{{title}}}",
        "description": "All the entries posted on {{{title}}}"
      }
    },
    "tagged.html": {
      "partials": {
        "title": "{{{tag}}} - {{{title}}}",
        "description": "All of the entries posted on {{{title}}} tagged {{{tag}}}"
      }
    },
    "entries.html": {
      "partials": {
        "title": "{{{title}}}",
        "description": "The latest entries posted on {{{title}}}"
      }
    },
    "error.html": {
      "partials": {
        "title": "{{{error.title}}} - {{{title}}}",
        "description": "Error on {{{title}}}"
      }
    },
    "entry.html": {
      "partials": {
        "title": "{{{entry.title}}} - {{{title}}}",
        "description": "{{{entry.summary}}}"
      }
    },
    "search.html": {
      "partials": {
        "title": "Search - {{{title}}}",
        "description": "Search all the entries posted on {{{title}}}"
      }
    }
  }
}
